@page
@model loginModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Login and Signup Page</title>
    <link rel="stylesheet" type="text/css" href="site.css">
    <style>


        .error-message {
            color: red;
            margin-left: 0.5rem;
            font-weight: 600;
            transition: opacity 0.5s ease-in-out;
        }


        .form {
            position: relative;
            margin: auto;
            margin-top: 5rem;
            align-content: center;
            background-color: #fff;
            display: block;
            padding: 1rem;
            max-width: 350px;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        .form-title {
            font-size: 1.25rem;
            line-height: 1.75rem;
            font-weight: 600;
            text-align: center;
            color: #000;
        }

        .input-container {
            position: relative;
        }

            .input-container input, .form button {
                outline: none;
                border: 1px solid #e5e7eb;
                margin: 8px 0;
            }

            .input-container input {
                background-color: #fff;
                padding: 1rem;
                padding-right: 3rem;
                font-size: 0.875rem;
                line-height: 1.25rem;
                width: 300px;
                border-radius: 0.5rem;
                box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            }

            .input-container span {
                display: grid;
                position: absolute;
                top: 0;
                bottom: 0;
                right: 0;
                padding-left: 1rem;
                padding-right: 1rem;
                place-content: center;
            }

                .input-container span svg {
                    padding-block-end: 0.125rem;
                    color: #9CA3AF;
                    width: 1rem;
                    height: 1rem;
                }

        .submit {
            display: block;
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
            padding-left: 1.25rem;
            padding-right: 1.25rem;
            background-color: #4F46E5;
            color: #ffffff;
            font-size: 0.875rem;
            line-height: 1.25rem;
            font-weight: 500;
            width: 100%;
            border-radius: 0.5rem;
            text-transform: uppercase;
        }
    </style>

    <script>

        function validateForm(formId) {
            var emailInput = document.querySelector(`#${formId} input[type="email"]`);
            var passwordInput = document.querySelector(`#${formId} input[type="password"]`);
            var errorMessage = document.querySelector(`#${formId} .error-message`);

            if (emailInput.value === "" || passwordInput.value === "") {
                errorMessage.textContent = "Please fill in all the fields.";
                errorMessage.style.opacity = 1;

                setTimeout(function () {
                    errorMessage.style.opacity = 0;
                    setTimeout(function () {
                        errorMessage.textContent = "";
                    }, 700);
                }, 1500);

                return false;
            }

            errorMessage.textContent = "";

            // If all fields are filled, perform the login action.
            login();

            return true;
        }

        function login() {
            // Perform the login action here, e.g., send a request to the server for authentication.
            // After successful login, you can redirect the user to the dashboard.
            // For this example, we'll simulate the login with an alert.

            window.location.href = "/userDashboard"; // Replace "login.html" with the actual URL of your login page.
        }
    </script>

</head>
<body>
    <form class="form" id="login-form" onsubmit="return validateForm('login-form');">
        <p class="form-title">Sign in to your account</p>
        <div class="input-container">
            <input placeholder="Enter email" type="email">
        </div>
        <div class="input-container">
            <input placeholder="Enter password" type="password">
        </div>
        <div class="error-message"></div>
        <button class="submit" onclick=login()>Sign In</button>
    </form>
</body>
</html>

